<h1>Contact Me</h1>

<form action="/contact" method="POST" class="form">
    <div>
        <label for="name">Name</label>
        <input value="<%= contact.name %>" type="text" name="name" id="name" required></input>
    </div>
    <div>
        <label for="email">Email</label>
        <input value="<%= contact.email %>" type="email" name="email" id="email" required></input>
    </div>
    <div>
        <label for="subject">Subject</label>
        <input value="<%= contact.subject %>" type="text" name="subject" id="subject"></input>
    </div>
    <div>
        <label for="message">Message</label>
        <textarea value="<%= contact.message %>" type="text" name="message" id="message"></textarea>
    </div>
    <button type="submit" class="btn">Send Message</button>
</form>