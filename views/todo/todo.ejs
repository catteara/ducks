<h1>To Do List</h1>
<div class="todo">
  <form action="/todo" method="POST">
    <input type="text" name="content">
    <button type="submit" class="button">&plus;</button>
  </form>
  <ul class="todo-list">
    <% todo.forEach(details => { %>
    <li class="todo-list-item">
      <div class="todo-list-item-name"><%= details.content %></div>
      <a href="/todo/edit/<%= details._id %>" class="edit">&#9998;</a>
      <a href="/todo/remove/<%= details._id %>" class="remove">&#10006;</a>
    </li>
    <% }) %>
  </ul>
</div>